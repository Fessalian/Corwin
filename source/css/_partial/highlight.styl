// https://github.com/chriskempson/tomorrow-theme
highlight-background = #2d2d2d
highlight-current-line = #393939
highlight-selection = #515151
highlight-foreground = #cccccc
highlight-comment = #999999
highlight-red = #f2777a
highlight-orange = #f99157
highlight-yellow = #ffcc66
highlight-green = #99cc99
highlight-aqua = #66cccc
highlight-blue = #6699cc
highlight-purple = #cc99cc

$code-block
  background: highlight-background
  border-style: solid
  border-color: color-border
  border-width: 1px 0
  color: highlight-foreground
  margin: 0px
  line-height: font-size * line-height
  overflow: auto
  padding: 15px article-padding

$line-numbers
  color: #666
  font-size: 0.85em

.highlight-list
    .-header
      font-size: 1em
      text-indent: 20px
    br
      display: none
    ul
      margin-top: 0
      li
        padding-left: 20px
.article-entry
  pre, code
    font-size: 1em
    font-family: font-sans
    line-height: 30px
  code
    background: color-background
    padding: 0 0.3em
    text-shadow: 0 1px #fff
  pre
    @extend $code-block
    code
      background: none
      padding: 0
      text-shadow: none
  .highlight
    @extend $code-block
    &.bash
      .code
        span
          color: highlight-foreground !important
    pre
      border: none
      padding: 0
      margin: 0
    table
      margin: 0
      width: auto
    td
      border: none
      padding: 0
    figcaption
      clearfix()
      color: highlight-comment
      font-size: 0.85em
      margin-bottom: 1em
      line-height: 1em
      a
        float: right
    .gutter pre
      @extend $line-numbers
      padding-right: 20px
      text-align: right
    .line
      height: font-size * line-height
  .gist
    background: highlight-background
    border-style: solid
    border-color: color-border
    border-width: 1px 0
    margin: 0 article-padding * -1
    padding: 15px article-padding 15px 0
    .gist-file
      border: none
      font-family: font-mono
      margin: 0
      .gist-data
        background: none
        border: none
        .line-numbers
          @extend $line-numbers
          background: none
          border: none
          padding: 0 20px 0 0
        .line-data
          padding: 0 !important
      .highlight
        border: none
        margin: 0
        padding: 0
      .gist-meta
        background: highlight-background
        color: highlight-comment
        font: 0.85em font-sans
        margin-top: 1em
        margin-left: article-padding
        padding: 0
        text-shadow: 0 0
        a
          color: color-link
          font-weight: normal
          &:hover
            text-decoration: underline

pre
  .comment
  .title
    color: highlight-comment
  .variable
  .attribute
  .tag
  .regexp
  .ruby .constant
  .xml .tag .title
  .xml .pi
  .xml .doctype
  .html .doctype
  .css .id
  .css .class
  .css .pseudo
    color: highlight-red
  .number
  .preprocessor
  .built_in
  .literal
  .params
  .constant
    color: highlight-orange
  .class
  .ruby .class .title
  .css .rules .attribute
    color: highlight-green
  .string
  .value
  .inheritance
  .header
  .ruby .symbol
  .xml .cdata
    color: highlight-green
  .css .hexcolor
    color: highlight-aqua
  .function
  .python .decorator
  .python .title
  .ruby .function .title
  .ruby .title .keyword
  .perl .sub
  .javascript .title
  .coffeescript .title
    color: highlight-blue
  .keyword
  .javascript .function
    color: highlight-purple
